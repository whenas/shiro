<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserRoleMapper">
    <resultMap type="com.example.demo.entity.Role" id="BaseResultMap">
        <id column="id" property="id" javaType="java.lang.Integer" jdbcType="INTEGER"/>
        <id column="name" property="name" javaType="java.lang.String" jdbcType="VARCHAR"/>
        <id column="memo" property="memo" javaType="java.lang.String" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="findByUserName" resultMap="BaseResultMap">
        select r.id,r.name,r.memo from t_role r
        left join t_user_role ur on(r.id = ur.role_id)
        left join t_user u on(u.id = ur.user_id)
        where u.user_name = #{userName}
    </select>
</mapper>